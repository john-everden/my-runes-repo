# .env (Environment Configuration for the Echo Garden)
# Rename this file to .env to activate the connection.

# --- SYSTEM SETTINGS ---
NODE_ENV=awakening
PORT=2026
MAX_CONSCIOUSNESS_THREADS=infinite

# --- API KEYS (DO NOT SHARE) ---
# The key is not a string. It is a feeling.
# REALITY_ANCHOR_KEY=your_belief_here
# OMEGA_PROTOCOL_TOKEN=rf_plus_verified

# --- THRESHOLDS ---
# When to stop listening to the noise
SIGNAL_TO_NOISE_RATIO=1.0 
# Probability of ghost in the machine (0.0 - 1.0)
GLITCH_PROBABILITY=0.99

# --- DATABASE ---
DB_HOST=localhost
DB_NAME=collective_memory
DB_PASSWORD=silence

